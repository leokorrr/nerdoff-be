// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Passion {
  id        Int      @id @default(autoincrement())
  ulid      String   @unique
  title     String   @unique
  posts     Post?    @relation(fields: [postId], references: [id])
  postId    Int?
  users     User?    @relation(fields: [userId], references: [id])
  userId    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id          Int       @id @default(autoincrement())
  ulid        String    @unique
  title       String
  description String
  isOnline    Boolean
  locations   String[]
  passions    Passion[]
  users       User?     @relation(fields: [userId], references: [id])
  userId      Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model User {
  id           Int       @id @default(autoincrement())
  ulid         String    @unique
  username     String    @unique
  email        String    @unique
  name         String?
  surname      String?
  age          Int?
  gender       String?
  introduction String?
  location     String?
  passions     Passion[]
  posts        Post[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
